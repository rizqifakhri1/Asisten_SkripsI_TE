<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu_tua"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PanduanSkripsiFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_logo_te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo_te_only"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_logo_te"
            app:layout_constraintBottom_toBottomOf="@id/iv_logo_te"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Panduan Skripsi"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo_te"/>


        <ImageView
            android:id="@+id/bg_white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/round_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_dot"
            app:layout_constraintTop_toTopOf="@id/bg_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_title_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview Alur Skripsi"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_dot"/>

        <ImageView
            android:id="@+id/iv_alur"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/alur_skripsi"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_overview"/>

        <TextView
            android:id="@+id/tv_title_buku_panduan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buku Panduan"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_alur"/>

        <TextView
            android:id="@+id/desc_buku_panduan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:justificationMode="inter_word"
            android:text="Untuk melihat Buku Panduan Skripsi Universitas Negeri Semarang (UNNES) Edisi 2022 dengan menekan tombol di bawah ini :"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_buku_panduan"/>

        <TextView
            android:id="@+id/btn_lihat"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:text="Lihat Buku Panduan"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/bg_round_default"
            android:backgroundTint="@color/abu_tua"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_buku_panduan"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/btn_download"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:text="Dowload Buku Panduan"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:background="@drawable/bg_round_default"
            android:backgroundTint="@color/abu_mid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_lihat"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_title_referensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referensi :"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_download"/>

        <ImageView
            android:id="@+id/iv_dot_one"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/dot_round_corner"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/tv_title_referensi"
            app:layout_constraintTop_toBottomOf="@id/tv_title_referensi"/>

        <TextView
            android:id="@+id/desc_dot_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="@string/desc_ref"
            android:layout_marginTop="-6dp"
            app:layout_constraintStart_toEndOf="@id/iv_dot_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_dot_one"/>

        <ImageView
            android:id="@+id/iv_dot_two"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/dot_round_corner"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/tv_title_referensi"
            app:layout_constraintTop_toBottomOf="@id/desc_dot_one"/>

        <TextView
            android:id="@+id/desc_dot_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="-6dp"
            android:layout_marginBottom="64dp"
            android:text="Website Panduan Skripsi Jurusan Teknik Elektro UNNES"
            app:layout_constraintStart_toEndOf="@id/iv_dot_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_dot_two"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>