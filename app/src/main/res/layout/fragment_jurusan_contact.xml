<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu_tua"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".JurusanContactFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_logo_te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo_te_only"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_logo_te"
            app:layout_constraintBottom_toBottomOf="@id/iv_logo_te"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/hubungi_jurusan"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo_te"/>


        <ImageView
            android:id="@+id/bg_white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/round_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ImageView
            android:layout_width="31dp"
            android:layout_height="200dp"
            android:background="@drawable/bg_round_default"
            android:backgroundTint="@color/abu_tua"
            app:layout_constraintBottom_toBottomOf="@id/ic_alamat"
            app:layout_constraintEnd_toEndOf="@id/dot_one"
            app:layout_constraintStart_toStartOf="@id/dot_one"
            app:layout_constraintTop_toTopOf="@id/dot_one" />


        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_dot"
            app:layout_constraintTop_toTopOf="@id/bg_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/dot_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_baseline_email_24"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_dot"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toEndOf="@id/dot_one"
            app:layout_constraintTop_toTopOf="@id/dot_one"/>

        <TextView
            android:id="@+id/desc_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="elektro@mail.unnes.ac.id"
            app:layout_constraintStart_toStartOf="@id/tv_email"
            app:layout_constraintTop_toBottomOf="@id/tv_email"/>


        <!--  Telphone  -->
        <ImageView
            android:id="@+id/ic_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_baseline_phone_24"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_email"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telephone"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toEndOf="@id/ic_phone"
            app:layout_constraintTop_toTopOf="@id/ic_phone"/>

        <TextView
            android:id="@+id/desc_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="(024) 8508104"
            app:layout_constraintStart_toStartOf="@id/tv_phone"
            app:layout_constraintTop_toBottomOf="@id/tv_phone"/>

        <!--  Webiste  -->

        <ImageView
            android:id="@+id/ic_website"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_baseline_web_24"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_phone"/>

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toEndOf="@id/ic_website"
            app:layout_constraintTop_toTopOf="@id/ic_website"/>

        <TextView
            android:id="@+id/desc_website"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="https://jurte.unnes.ac.id/"
            app:layout_constraintStart_toStartOf="@id/tv_website"
            app:layout_constraintTop_toBottomOf="@id/tv_website"/>


        <!--Alamat-->

        <ImageView
            android:id="@+id/ic_alamat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_baseline_location_on_24"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_website"/>

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toEndOf="@id/ic_alamat"
            app:layout_constraintTop_toTopOf="@id/ic_alamat"/>

        <TextView
            android:id="@+id/desc_alamat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:justificationMode="inter_word"
            android:text="Gedung E11 Jurusan Teknik Elektro Fakultas Teknik Universitas Negeri Semarang Kampus Sekaran Gunungpati Kota Semarang, 50229"
            app:layout_constraintStart_toStartOf="@id/tv_alamat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_alamat"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_maps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/abu_tua"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/desc_alamat">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/maps_ptik"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            android:text="*tekan untuk membuka google maps"
            app:layout_constraintStart_toStartOf="@id/cv_maps"
            app:layout_constraintTop_toBottomOf="@id/cv_maps"
            app:layout_constraintEnd_toEndOf="@id/cv_maps"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>






</ScrollView>