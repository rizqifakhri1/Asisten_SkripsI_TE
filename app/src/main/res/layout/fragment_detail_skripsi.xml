<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu_tua"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailSkripsiFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_logo_te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo_te_only"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_logo_te"
            app:layout_constraintBottom_toBottomOf="@id/iv_logo_te"/>


        <ImageView
            android:id="@+id/bg_white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/round_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo_te"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_dot"
            app:layout_constraintTop_toTopOf="@id/bg_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_judul_dokumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Skripsi"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_dot"/>


        <TextView
            android:id="@+id/tv_nama_mahasiswa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Mahasiswa"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_judul_dokumen"/>

        <TextView
            android:id="@+id/tv_nim_mahasiswa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NIM : 123456"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_mahasiswa"/>

        <TextView
            android:id="@+id/tv_prodi_mahasiswa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pendidikan Teknik Informatika dan Komputer"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nim_mahasiswa"/>

        <TextView
            android:id="@+id/tv_angkatan_mahasiswa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Angkatan : 2019"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_prodi_mahasiswa"/>

        <TextView
            android:id="@+id/tv_email_mahasiswa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="emailmahasiswa@students.unnes.ac.id"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="6dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_angkatan_mahasiswa"/>

        <TextView
            android:id="@+id/tv_kategori_bidang_dokumen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kategori Bidang"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_round_default"
            android:backgroundTint="@color/abu_mid_terang"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_email_mahasiswa"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/abu_mid_terang"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_kategori_bidang_dokumen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_kategori_bidang_dokumen"
            app:layout_constraintBottom_toBottomOf="@id/tv_kategori_bidang_dokumen"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/holder_abstrak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_default"
            android:backgroundTint="@color/abu_mid_terang"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_kategori_bidang_dokumen">


            <TextView
                android:id="@+id/tv_title_abstrak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abstrak"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_desc_abstrak_dokumen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/desc_lorem"
                android:justificationMode="inter_word"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_abstrak"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_lihat_berkas"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:text="Baca"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bg_round_default"
            android:backgroundTint="@color/abu_tua"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holder_abstrak"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>